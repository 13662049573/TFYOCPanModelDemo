framework module TFYOCPanlModel {
    umbrella header "TFYOCPanlModel.h"
    
    // ========== Tools 模块 ==========
    explicit module Tools {
        header "Tools/KeyValueObserver.h"
        header "Tools/UIScrollView+Helper.h"
        header "Tools/UIView+TFY_Frame.h"
        export *
    }
    
    // ========== popController 模块 ==========
    explicit module popController {
        // Protocol 协议
        header "popController/TFYPanModalPresentable.h"
        header "popController/TFYPanModalPanGestureDelegate.h"
        header "popController/TFYPanModalHeight.h"
        header "popController/TFYPanModalFrequentTapPrevention.h"
        header "popController/TFYPanModalPresenterProtocol.h"
        header "popController/TFYPanModalIndicatorProtocol.h"
        header "popController/TFYPanModalPresentationUpdateProtocol.h"
        
        // Category 分类
        header "popController/UIViewController+PanModalDefault.h"
        header "popController/UIViewController+Presentation.h"
        header "popController/UIViewController+PanModalPresenter.h"
        header "popController/UIViewController+LayoutHelper.h"
        
        // Animation 动画
        header "popController/TFYPresentingVCAnimatedTransitioning.h"
        header "popController/TFYPanModalPresentationAnimator.h"
        header "popController/TFYPanModalAnimator.h"
        header "popController/TFYPanModalInteractiveAnimator.h"
        header "popController/TFYPageSheetPresentingAnimation.h"
        header "popController/TFYShoppingCartPresentingAnimation.h"
        
        // View 视图
        header "popController/TFYPanIndicatorView.h"
        header "popController/TFYDimmedView.h"
        header "popController/TFYPanModalContentView.h"
        header "popController/TFYPanContainerView.h"
        header "popController/TFYPanModalContainerView.h"
        
        // Controller 控制器
        header "popController/TFYPanModalPresentationController.h"
        header "popController/TFYPanModalPresentationDelegate.h"
        header "popController/TFYPanModalPresentableHandler.h"
        
        // Config 配置
        header "popController/TFYBackgroundConfig.h"
        header "popController/TFYPanModalShadow.h"
        header "popController/TFYVisualEffectView.h"
        
        export *
    }
    
    // ========== popView 模块 ==========
    explicit module popView {
        // Main 主类
        header "popView/TFYPopup.h"
        header "popView/TFYPopupView.h"
        header "popView/TFYPopupViewDelegate.h"
        header "popView/TFYPopupViewAnimator.h"
        
        // Configuration 配置
        header "popView/TFYPopupViewConfiguration.h"
        header "popView/TFYPopupContainerConfiguration.h"
        header "popView/TFYPopupContainerType.h"
        header "popView/TFYPopupKeyboardConfiguration.h"
        
        // Animator 动画器
        header "popView/TFYPopupBaseAnimator.h"
        header "popView/TFYPopupAnimators.h"
        header "popView/TFYPopupBottomSheetAnimator.h"
        header "popView/TFYPopupAnimatorLayout.h"
        
        // Manager 管理器
        header "popView/TFYPopupContainerManager.h"
        header "popView/TFYPopupPriorityManager.h"
        
        // View 视图
        header "popView/TFYPopupBackgroundView.h"
        
        export *
    }
    
    export *
    module * { export * }
}
